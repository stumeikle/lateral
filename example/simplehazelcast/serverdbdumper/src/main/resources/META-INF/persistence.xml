        <class>transgenic.lauterbrunnen.lateral.example.simplehazelcast.serverdbdumper.entity.generated.RoomEntity</class>
        <class>transgenic.lauterbrunnen.lateral.example.simplehazelcast.serverdbdumper.entity.generated.ContactDetailsEntity</class>
        <class>transgenic.lauterbrunnen.lateral.example.simplehazelcast.serverdbdumper.entity.generated.SchoolEntity</class>
        <class>transgenic.lauterbrunnen.lateral.example.simplehazelcast.serverdbdumper.entity.generated.MemberOfStaffEntity</class>
        <class>transgenic.lauterbrunnen.lateral.example.simplehazelcast.serverdbdumper.entity.generated.SupplyTeacherEntity</class>
        <class>transgenic.lauterbrunnen.lateral.example.simplehazelcast.serverdbdumper.entity.generated.DeputyHeadEntity</class>
        <class>transgenic.lauterbrunnen.lateral.example.simplehazelcast.serverdbdumper.entity.generated.JanitorEntity</class>
        <class>transgenic.lauterbrunnen.lateral.example.simplehazelcast.serverdbdumper.entity.generated.LessonScheduleEntity</class>
        <class>transgenic.lauterbrunnen.lateral.example.simplehazelcast.serverdbdumper.entity.generated.HeadOfHouseEntity</class>
        <class>transgenic.lauterbrunnen.lateral.example.simplehazelcast.serverdbdumper.entity.generated.HouseEntity</class>
        <class>transgenic.lauterbrunnen.lateral.example.simplehazelcast.serverdbdumper.entity.generated.SchoolClassEntity</class>
        <class>transgenic.lauterbrunnen.lateral.example.simplehazelcast.serverdbdumper.entity.generated.SubjectDayTimeEntity</class>
        <class>transgenic.lauterbrunnen.lateral.example.simplehazelcast.serverdbdumper.entity.generated.TeacherEntity</class>
        <class>transgenic.lauterbrunnen.lateral.example.simplehazelcast.serverdbdumper.entity.generated.AddressEntity</class>
        <class>transgenic.lauterbrunnen.lateral.example.simplehazelcast.serverdbdumper.entity.generated.HeadEntity</class>
        <!-- End of Lateral Entities -->

        <properties>
            <property name="javax.persistence.jdbc.driver" value="org.apache.derby.jdbc.EmbeddedDriver" />
            <property name="javax.persistence.jdbc.url"
                      value="jdbc:derby:simpleDb;create=true" />
            <property name="javax.persistence.jdbc.user" value="test" />
            <property name="javax.persistence.jdbc.password" value="test" />

            <!-- EclipseLink should create the database schema automatically -->
            <property name="eclipselink.ddl-generation" value="create-tables" />
            <property name="eclipselink.ddl-generation.output-mode" value="database" />
        </properties>

    </persistence-unit>
</persistence>
